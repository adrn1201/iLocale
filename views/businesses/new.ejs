<% layout('layouts/boilerplate') %>

    <section class="record-area bg-gray py-5">
        <div class="container">
            <form action="/businesses" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <fieldset class="border border-gary p-4 mb-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Post Your Business Information</h3>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Business Name:</h6>
                            <input type="text" class="form-control w-100 p-2 bg-white text-capitalize" placeholder="Business Name" id="new-title" name="business[title]" required>
                            <div class="invalid-feedback error-text">Business name is required</div>
                            <h6 class="font-weight-bold pt-4 pb-1">Location:</h6>
                            <input type="text" class="form-control w-100 p-2 bg-white text-capitalize" placeholder="Location" id="new-location" name="business[location]" required>
                            <div class="invalid-feedback error-text">Location is required</div>
                            <h6 class="font-weight-bold pt-4 pb-1">Description:</h6>
                            <textarea class="form-control mb-2 bg-white" rows="7" placeholder="Write details about the business" id="new-description" name="business[description]" required></textarea>
                            <div class="invalid-feedback error-text">Description is required</div>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Select Category:</h6>
                            <select name="business[category]" class="form-select bg-white pt-1 w-100" required>
                                <option selected disabled>Select Category</option>
                                <% for(const category of categories){ %> 
                                    <option value="<%=category._id%>"><%= category.displayText %></option>
                                <% } %> 
                            </select>
                            <div class="invalid-feedback">Example invalid select feedback</div>

                            <div class="choose-file text-center my-4 py-4 rounded" id="drop-container">
                                <label for="file-upload">
                                <span class="d-block font-weight-bold text-dark" id="file-text">Image(s):</span>
                                <span class="d-block btn bg-primary text-white my-3 select-files">Choose image(s)</span>
                                <span class="d-block">Maximum number of images: 5</span>
                                <input type="file" class="form-control-file d-none" id="file-upload" name="image" multiple>
                                <div class="invalid-feedback">Image(s) required</div>
                            </label>

                            </div>

                        </div>
                    </div>
                </fieldset>


                <div class="row">
                    <div class="col-md-6 offset-md-5">
                        <button type="submit" class="btn btn-success d-block mt-2">Post</button>
                    </div>
                </div>

            </form>
        </div>
    </section>

    <script src="/js/fileInput.js"></script>