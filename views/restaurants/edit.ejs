<% layout('layouts/boilerplate') %>

    <section class="ad-post bg-gray py-5">
        <div class="container">
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <fieldset class="border border-gary p-4 mb-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Post Your Restaurant Experience</h3>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Restaurant Name:</h6>
                            <input type="text" class="form-control w-100 p-2 bg-white text-capitalize" placeholder="Restaurant Name" id="new-title" name="restaurant[title]" value="<%= restaurant.title %>" required>
                            <div class="invalid-feedback error-text">Restaurant name is required</div>
                            <h6 class="font-weight-bold pt-4 pb-1">Location:</h6>
                            <input type="text" class="form-control w-100 p-2 bg-white text-capitalize" placeholder="Location" id="new-location" name="restaurant[location]" value="<%= restaurant.location %>" required>
                            <div class="invalid-feedback error-text">Location is required</div>
                            <h6 class="font-weight-bold pt-4 pb-1">Description:</h6>
                            <textarea class="form-control mb-2 bg-white" rows="7" placeholder="Write details about the restaurant" id="new-description" name="restaurant[description]" required><%= restaurant.description %></textarea>
                            <div class="invalid-feedback error-text">Description is required</div>
                        </div>
                        <div class="col-lg-6">
                            <!-- <h6 class="font-weight-bold pt-4 pb-1">Select Ad Category:</h6>
                        <select name="" id="inputGroupSelect" class="w-100">
                        <option value="1">Select category</option>
                        <option value="2">Laptops</option>
                        <option value="3">iphone</option>
                        <option value="4">microsoft</option>
                        <option value="5">monitors</option>
                        <option value="6">11inch Macbook Air</option>
                        <option value="7">Study Table Combo</option>
                        <option value="8">11inch Macbook Air</option>
                        <option value="9">Study Table Combo</option>
                        <option value="10">11inch Macbook Air</option>
                    </select> -->
                            <div class="choose-file text-center my-4 py-4 rounded" id="drop-container">
                                <label for="file-upload">
                        <span class="d-block font-weight-bold text-dark" id="file-text">Image(s):</span>
                        <span class="d-block btn bg-primary text-white my-3 select-files">Add more image(s)</span>
                        <span class="d-block">Maximum number of images: 5</span>
                        <input type="file" class="form-control-file d-none" id="file-upload" name="image" multiple>
                    </label>

                            </div>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="border bg-white p-4 my-5 ad-feature bg-gray">
                    <div class="row">
                        <div class="col-lg-12">

                            <h3 class="pb-3">Select Images to Delete (Optional):
                                <span class="float-right"><a class="text-right font-weight-normal text-success" href="#">Current Images</a></span>
                            </h3>

                        </div>
                        <div class="col-lg-6 my-3">
                            <ul>
                                <% restaurant.images.forEach((img, i) => { %>
                                    <% if(i % 2 === 0){ %>
                                        <li>
                                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" class="input-checkbox" value="<%= img.filename %>">
                                            <label for="image-<%=i%>" class="font-weight-bold text-dark py-1 label-edit"><%= img.originalName %></label>
                                            <img src="<%= img.selection %>" alt="..." class="mb-5">
                                        </li>
                                        <% } %>
                                            <% }) %>
                            </ul>
                        </div>
                        <div class="col-lg-6 my-3">
                            <ul>
                                <% restaurant.images.forEach((img, i) => { %>
                                    <% if(i % 2 !== 0){ %>
                                        <li>
                                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" class="input-checkbox" value="<%=img.filename%>">
                                            <label for="image-<%=i%>" class="font-weight-bold text-dark py-1 label-edit"><%= img.originalName %></label>
                                            <img src="<%= img.selection %>" alt="..." class="mb-5">
                                        </li>
                                        <% } %>
                                            <% }) %>
                            </ul>
                        </div>
                    </div>
                </fieldset>
                <div class="row">
                    <div class="col-md-6 offset-md-5">
                        <button type="submit" class="btn btn-success d-block mt-2">Post</button>
                    </div>
                </div>

            </form>
        </div>
    </section>