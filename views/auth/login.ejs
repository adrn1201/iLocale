<% layout('layouts/boilerplate') %>
    <section class="login py-5 border-top-1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-8 align-item-center">
                    <div class="border">
                        <h3 class="mt-4 text-center font-weight-bold">Log in</h3>
                        <div class="p-4">
                            <a href="/auth/google" class="btn-google"> <img src="/images/google-logo.png" alt="GOOGLE">Continue with Google </a>
                        </div>
                        <hr class="hr-text" data-content="OR">
                        <form action="/login" method="POST" class="needs-validation" novalidate>
                            <fieldset class="p-4">
                                <input type="text" name="username" placeholder="Username" class="form-control p-3 w-100 my-2" required>
                                <div class="invalid-feedback error-text">Please enter your username.</div>
                                <input type="password" name="password" placeholder="Password" class="form-control mt-3 p-3 w-100 my-2" required>
                                <div class="invalid-feedback error-text">Please enter your password.</div>
                                <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3 offset-4">Log in</button>
                                <p class="mt-4 text-muted text-center" id="alternate-text">Don't have an account yet? <a class="text-primary" href="/signup" id="register-link">Sign up</a></p>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>