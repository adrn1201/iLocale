<% layout('layouts/boilerplate') %>
    <section class="login py-5 border-top-1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-8 align-item-center">
                    <div class="border">
                        <h3 class="bg-gray p-4">Login Now</h3>
                        <form action="/register" method="POST" class="needs-validation" novalidate>
                            <fieldset class="p-4">
                                <input type="text" placeholder="Username" class="form-control p-3 w-100 my-2" required>
                                <div class="invalid-feedback error-text">Please enter your username.</div>
                                <input type="password" placeholder="Password" class="form-control mt-3 p-3 w-100 my-2" required>
                                <div class="invalid-feedback error-text">Please enter your password.</div>
                                <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3 offset-4">Log in</button>
                                <p class="mt-2 d-block text-muted" id="alternate-text">or</p>
                                <a class="d-inline-block text-primary" href="/register" id="register-link">Register Now</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>