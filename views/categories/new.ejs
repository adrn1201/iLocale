<% layout('layouts/boilerplate') %>
    <section class="user-profile section">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1 col-lg-3 offset-lg-0">
                    <div class="sidebar">
                        <!-- User Widget -->
                        <%- include('../partials/profile-section') %>
                            <!-- Dashboard Links -->
                            <%- include('../partials/admin-sidebar') %>
                    </div>
                </div>
                <div class="col-md-10 offset-md-1 col-lg-9 offset-lg-0">
                    <div class="widget welcome-message">
                        <h2>Create a Category</h2>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="widget personal-info">
                                <h3 class="widget-header user">Category Information</h3>
                                <form action="/admin/categories" method="POST">
                                    <div class="form-group">
                                        <label for="category-name">Category Name</label>
                                        <input type="text" class="form-control" id="category-name" name="category[categoryName]">
                                    </div>
                                    <button class="btn btn-transparent offset-5">Save</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>