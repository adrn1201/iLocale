<% layout('layouts/boilerplate') %>
    <section class="hero-area bg-1 text-center overly">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Header Contetnt -->
                    <div class="content-block">
                        <h1>Discover Businesses Near You</h1>
                        <p>Learn about the current businesses in your locale</p>
                        <div class="short-popular-category-list text-center">
                            <ul class="list-inline">
                                <% for(const category of categories){ %>
                                    <li class="list-inline-item">
                                        <a href="/businesses?category=<%=category.categoryName%>"><i class="fa fa-<%=category.iconClass%>"></i> <%=category.displayText%></a></li>
                                    <% } %>
                            </ul>
                        </div>

                    </div>
                    <!-- Advance Search -->
                    <div class="advance-search">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-12 col-md-12 align-content-center">
                                    <form action="/businesses" method="GET">
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <input type="text" name="title" class="form-control my-2 my-lg-1" id="inputtext4" placeholder="What are you looking for">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <input type="text" name="location" class="form-control my-2 my-lg-1" id="inputLocation4" placeholder="Location">
                                            </div>
                                            <div class="form-group col-md-2 align-self-center">
                                                <button type="submit" class="btn btn-primary">Search</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>

    <section class="popular-deals section bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h2>Most Reviewed Posts</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- offer 01 -->
                <div class="col-lg-12">
                    <div class="trending-ads-slide">
                        <% businesses.forEach((business,i) => { %>
                            <div class="col-sm-12 col-lg-4">
                                <!-- product card -->
                                <div class="product-item bg-light">
                                    <div class="card">
                                        <div class="thumb-content">
                                            <a href="/businesses/<%= business._id %>">
                                                <img class="card-img-top img-fluid" src="<%= business.images.length ? business.images[0].url : 'https://res.cloudinary.com/dofxpwwou/image/upload/v1642398778/iLocale/w2cjwlko98y1i8z1vtx2.jpg'%>" alt="Card image cap">
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title">
                                                <a href="/businesses/<%= business._id %>">
                                                    <%= business.title %>
                                                </a>
                                            </h4>
                                            <ul class="list-inline product-meta">
                                                <li class="list-inline-item">
                                                    <a href="/businesses?category=<%= business.category.categoryName %>"> <i class="fa fa-<%=business.category.iconClass%>"></i>
                                                        <%= business.category ? business.category.displayText : 'N/A' %>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item">
                                                    <a href=""><i class="fa fa-location-arrow"></i> <%=business.location %></a>
                                                </li>
                                            </ul>
                                            <p class="card-text">
                                                <%= business.shortText %>
                                            </p>
                                            <div class="product-ratings" id="biz-home-<%=i%>">
                                                <% if(business.rateCount){ %>
                                                    <div class="stars-outer">
                                                        <div class="stars-inner"></div>
                                                    </div>
                                                    <span class="text-muted" style="font-size: small;">
                                                    <%= business.rateCount && business.rateCount === 1 ? `${business.rateCount} review` : `${business.rateCount} reviews`%>
                                                </span>
                                                    <% } else{ %>
                                                        <p>No reviews</p>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>


            </div>
        </div>
    </section>


    <section class="call-to-action overly bg-3 section-sm">
        <!-- Container Start -->
        <div class="container">
            <div class="row justify-content-md-center text-center">
                <div class="col-md-8">
                    <div class="content-holder">
                        <h2>Start today to get more exposure and grow your business</h2>
                        <ul class="list-inline mt-30">
                            <li class="list-inline-item"><a class="btn btn-main" href="/businesses/new">Add Listing</a></li>
                            <li class="list-inline-item"><a class="btn btn-secondary" href="/businesses">Browse Businesses</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>

    <script>
        const businesses = <%- JSON.stringify(businesses) %>
    </script>

    <script src="/js/homeStars.js"></script>