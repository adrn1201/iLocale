<section class="page-search">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Advance Search -->
                <div class="advance-search">
                    <form action="/businesses" method="GET">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" name="title" class="form-control my-2 my-lg-0" id="title-inpt" placeholder="What are you looking for" value="<%= title ? title : ''%>">
                            </div>
                            <div class="form-group col-md-4">
                                <input type="text" name="location" class="form-control my-2 my-lg-0" id="location-inpt" placeholder="Location" value="<%= location ? location : ''%>">
                            </div>
                            <input type="hidden" name="sortBy" value="<%= sortBy ? sortBy : ''%>" id="sort-inpt">
                            <div class="form-group col-md-2">

                                <button type="submit" class="btn btn-info">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>